<Window x:Class="Bookmaster.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookmaster.View.Windows"
        mc:Ignorable="d"
        Title="Bookmaster3000" MinHeight="720" MinWidth="1280" Height="820" Width="1550" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- коллекция строк RowDefinition-->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--меню-->
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Name="LoginMi" Header="Вход в систему" Click="LoginMi_Click"/>
                <MenuItem Name="LogoutMi" Visibility="Collapsed" Header="Выход из системы" Click="LogoutMi_Click"/>
                <MenuItem Name="CloseMi" Header="Закрыть приложение" Click="CloseMi_Click"/>
            </MenuItem>
            <MenuItem Name="LibraryMi"  Header="Библиотека" Visibility="Collapsed">
                <MenuItem Name="BrowseCatalogMi" Header="Просмотр каталога" Click="BrowseCatalogMi_Click"/>
                <MenuItem Name="ManageCastomersMi" Header="Управление читателями" Click="ManageCastomersMi_Click"/>
                <MenuItem Name="CirculationMi" Header="Управление абонементом" Click="CirculationMi_Click"/>
                <MenuItem Name="ReportsMi" Header="Отчёты" Click="ReportsMi_Click"/>
            </MenuItem>
        </Menu>
        <!-- фрэйм (принимает и отображает страницы)-->
        <Frame Name="MainFrame" Grid.Row="2" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
